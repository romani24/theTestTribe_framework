{
    "default": {
        "paths": [
            "src/test/features/"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
